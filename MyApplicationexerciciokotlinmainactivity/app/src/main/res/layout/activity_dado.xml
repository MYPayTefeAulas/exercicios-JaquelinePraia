<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DadoActivity">

    <Button
        android:id="@+id/btUmDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:text=">"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btDoisDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:text=">"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btUmDado" />

    <Button
        android:id="@+id/btTresDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDoisDado"
        app:layout_constraintVertical_bias="0.584" />

    <Button
        android:id="@+id/btSortearDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Sortear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:text="Dados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuantidadeDado1"
        android:layout_width="56dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="56dp"
        android:text="Lados"
        app:layout_constraintEnd_toStartOf="@+id/btUmDado"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toEndOf="@+id/txtNumeroDado1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtNumeroDado1"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_marginStart="64dp"
        android:hint="0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/txtNumeroDado3"
        android:layout_width="33dp"
        android:layout_height="24dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="56dp"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/btSortearDado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumeroDado2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtQuantidadeDado3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:hint="Lados"
        app:layout_constraintBottom_toTopOf="@+id/btSortearDado"
        app:layout_constraintEnd_toStartOf="@+id/btTresDado"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/txtNumeroDado3" />

    <TextView
        android:id="@+id/txtQuantidadeDado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:hint="Lados"
        app:layout_constraintBottom_toTopOf="@+id/txtQuantidadeDado3"
        app:layout_constraintEnd_toStartOf="@+id/btDoisDado"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/txtNumeroDado2"
        app:layout_constraintTop_toBottomOf="@+id/txtQuantidadeDado1"
        app:layout_constraintVertical_bias="0.525" />

    <TextView
        android:id="@+id/txtNumeroDado2"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="112dp"
        android:hint="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumeroDado1" />

</androidx.constraintlayout.widget.ConstraintLayout>